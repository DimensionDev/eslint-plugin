{
  "extends": "@masknet/config",
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "module": "node20",
    "moduleResolution": "node16"
  },
  "include": ["./src", "./src/**/*.json"]
}
